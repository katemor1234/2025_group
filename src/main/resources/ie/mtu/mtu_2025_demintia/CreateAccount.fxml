<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="800.0" prefWidth="1280.0" style="-fx-background-color: linear-gradient(to bottom, #f8fbff, #eef3ff);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ie.mtu.mtu_2025_demintia.CreateAccountController">

    <!-- Centered card -->
    <VBox alignment="CENTER" spacing="18" style="-fx-background-color: white; -fx-background-radius: 12;                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 16, 0.25, 0, 6);                  -fx-padding: 28;">

        <Label style="-fx-text-fill:#263F73;" text="Create Account">
            <font><Font size="36.0" /></font>
        </Label>

        <!-- feedback -->
        <Label fx:id="messageLabel" style="-fx-text-fill:#b00020;" textAlignment="CENTER" />

        <!-- form -->
        <VBox alignment="CENTER_LEFT" maxWidth="320" spacing="12">
            <VBox spacing="6">
                <Label style="-fx-text-fill:#556;" text="Username" />
                <TextField fx:id="usernameField" prefWidth="320" promptText="Choose a username" />
            </VBox>

            <VBox spacing="6">
                <Label style="-fx-text-fill:#556;" text="Password" />
                <PasswordField fx:id="passwordField" prefWidth="320" promptText="Choose a password" />
            </VBox>
        </VBox>

        <!-- actions -->
        <VBox alignment="CENTER" spacing="10">
         <ImageView fitHeight="51.0" fitWidth="238.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../../java/ie/mtu/mtu_2025_demintia/images/web_neutral_sq_ctn@4x.png" />
            </image>
         </ImageView>
            <Button minHeight="51.0" minWidth="238.0" onAction="#onCreateClick" style="-fx-background-color:#4061B4; -fx-text-fill:white; -fx-background-radius:8;" text="Create Account" />
            <Hyperlink onAction="#onBackToLogin" text="Back to Login" />
        </VBox>
    </VBox>
</StackPane>
