<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ie.mtu.mtu_2025_demintia.HomePageController">

   <!-- center card -->
   <VBox alignment="CENTER" prefHeight="220" prefWidth="320" spacing="16" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 12, 0.2, 0, 4);" AnchorPane.bottomAnchor="60" AnchorPane.leftAnchor="80" AnchorPane.rightAnchor="80" AnchorPane.topAnchor="60">

      <Label style="-fx-text-fill: #263F73;" text="Dementia Hub">
         <font>
            <Font name="System Bold" size="22" />
         </font>
      </Label>

      <Label style="-fx-text-fill:#556;" text="Welcome — choose an option" />

      <VBox alignment="CENTER" spacing="10">
         <Button fx:id="loginButton" minHeight="36" minWidth="220" onAction="#loginButtonOnAction" style="-fx-background-color:#263F73; -fx-text-fill:white; -fx-background-radius:6;" text="Sign In" />
         <Button fx:id="registerButton" minHeight="36" minWidth="220" onAction="#registerButtonOnAction" style="-fx-background-color:#4061b4; -fx-text-fill:white; -fx-background-radius:6;" text="Create Account" />
      </VBox>

      <Label style="-fx-text-fill:#99A;" text="© 2025 MTU" />
   </VBox>
</AnchorPane>
