<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="800.0" prefWidth="1280.0" style="-fx-background-color: linear-gradient(to bottom, #f8fbff, #eef3ff);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ie.mtu.mtu_2025_demintia.LoginController">

    <!-- Centered card -->
    <VBox alignment="CENTER" spacing="18" style="-fx-background-color: white; -fx-background-radius: 12;                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 16, 0.25, 0, 6);                  -fx-padding: 28;">

        <Label style="-fx-text-fill:#263F73;" text="Login to your account">
            <font><Font size="36.0" /></font>
        </Label>

        <HBox alignment="CENTER" spacing="6">
            <Label text="Don't have an account yet?" />
            <!-- keep as a label (or swap to Hyperlink later with a handler) -->
            <Label onMouseClicked="#onRegisterHereClick" text="Register here" textFill="#2189b9" underline="true" />
        </HBox>

        <!-- validation / status -->
        <Label fx:id="loginMessageLabel" style="-fx-text-fill:#b00020;" textAlignment="CENTER" />

        <!-- form -->
        <VBox alignment="CENTER_LEFT" maxWidth="320" spacing="12">
            <VBox spacing="6">
                <Label style="-fx-text-fill:#556;" text="Username" />
                <TextField fx:id="usernameTextField" prefWidth="320" promptText="Enter username" />
            </VBox>

            <VBox spacing="6">
                <Label style="-fx-text-fill:#556;" text="Password" />
                <PasswordField fx:id="passwordPasswordField" prefWidth="320" promptText="Enter password" />
            </VBox>
        </VBox>

        <!-- actions -->
        <VBox alignment="CENTER" spacing="10">
            <ImageView fitHeight="51.0" fitWidth="238.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@images/web_neutral_sq_ctn@4x.png" />
            </image>
            </ImageView>
            <Button fx:id="loginButton" minHeight="51.0" minWidth="238.0" onAction="#loginButtonOnAction" style="-fx-background-color:#263F73; -fx-text-fill:white; -fx-background-radius:8;" text="Login" />
            <Button fx:id="cancelButton" minHeight="51.0" minWidth="238.0" onAction="#cancelButtonOnAction" style="-fx-background-color:#6B7BA8; -fx-text-fill:white; -fx-background-radius:8;" text="Cancel" />
        </VBox>
    </VBox>
</StackPane>
